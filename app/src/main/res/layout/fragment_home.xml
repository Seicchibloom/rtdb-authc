<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="734dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/tangerine"
                        android:text="Galabout"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="60sp" />

                    <ImageView
                        android:id="@+id/profile_app"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/placeholder" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/bookbutton"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:text="Book Now" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Suggested Place"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="30dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/palawan" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cebu" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bohol" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bagiuo" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/batangas" />
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="140dp"
                android:layout_height="53dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="150dp"
                android:layout_marginLeft="120dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="HOTELS"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.044" />

            <androidx.cardview.widget.CardView
                android:layout_width="294dp"
                android:layout_height="142dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="294dp"
                    android:layout_height="142dp"
                    android:background="@drawable/tagaytayhotel" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Tagaytay"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Wind and Sea Wind Residence"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="₱ 1,593"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="294dp"
                android:layout_height="142dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="50dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="294dp"
                    android:layout_height="142dp"
                    android:background="@drawable/bayview" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Manila"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Bayview Park Hotel"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="₱ 2,573"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="294dp"
                android:layout_height="142dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="50dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="294dp"
                    android:layout_height="142dp"
                    android:background="@drawable/boracayhotel" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Boracay"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="La Carmela De Boracay Hotel"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="₱ 9,974"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="294dp"
                android:layout_height="142dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="50dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="294dp"
                    android:layout_height="142dp"
                    android:background="@drawable/palawanhotel" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Palawan"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Blue Lagoon Inn And Suites "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="₱ 1,064"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="294dp"
                android:layout_height="142dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="294dp"
                    android:layout_height="142dp"
                    android:background="@drawable/davaohotel" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Davao"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Daylight Inn"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="₱ 375"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>